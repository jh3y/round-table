          </svg>
        </div>
      </div>
      <div class="controls card">
        <label for="c">Center</label>
        <input id="c"  value="c"  type="radio" name="anchor" checked>
        <label for="n">North</label>
        <input id="n"  value="n"  type="radio" name="anchor">
        <label for="ne">North East</label>
        <input id="ne"  value="ne"  type="radio" name="anchor">
        <label for="e">East</label>
        <input id="e"  value="e"  type="radio" name="anchor">
        <label for="se">South East</label>
        <input id="se"  value="se"  type="radio" name="anchor">
        <label for="s">South</label>
        <input id="s"  value="s"  type="radio" name="anchor">
        <label for="sw">South West</label>
        <input id="sw"  value="sw"  type="radio" name="anchor">
        <label for="w">West</label>
        <input id="w"  value="w"  type="radio" name="anchor">
        <label for="nw">North West</label>
        <input id="nw"  value="nw"  type="radio" name="anchor">
      </div>
    </main>
  </body>
  <script is:inline src="/licensed/InertiaPlugin.min.js"></script>
</html>
<script>
  import './_script.js'
</script>