        <path class="boat__wave" d="M206.107 226.167C195.683 226.167 185.85 223.708 176.607 218.792C158.513 228.625 135.798 228.625 117.705 218.792C99.6117 228.625 76.8967 228.625 59 218.792C46.905 225.577 33.04 226.658 19.6667 226.167V206.5C33.5317 206.992 46.905 205.517 59 196.667C76.11 208.958 100.398 208.958 117.705 196.667C135.11 208.958 159.3 208.958 176.607 196.667C188.505 205.517 201.977 206.992 215.743 206.5V226.167H206.107Z"/>
